{
  "name": "ecotone/pdo-event-sourcing",
  "license": "MIT",
  "homepage": "https://docs.ecotone.tech/",
  "type": "library",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Dariusz Gafka",
      "email": "dgafka.mail@gmail.com"
    }
  ],
  "keywords": [
    "dbal",
    "ecotone"
  ],
  "description": "Extends Ecotone with Event Sourcing using Prooph PDO Event Store",
  "autoload": {
    "psr-4": {
      "Ecotone\\EventSourcing\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\Ecotone\\EventSourcing\\": ["tests"]
    }
  },
  "require": {
    "ecotone/dbal": "2.0.0.x-dev",
    "prooph/pdo-event-store": "^1.14.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "behat/behat": "^3.10",
    "phpstan/phpstan": "^1.8",
    "wikimedia/composer-merge-plugin": "^2.0"
  },
  "scripts": {
    "tests:phpstan": "vendor/bin/phpstan",
    "tests:phpunit-postgres": "DATABASE_DSN=pgsql://ecotone:secret@localhost:5432/ecotone vendor/bin/phpunit",
    "tests:phpunit-mysql": "DATABASE_DSN=mysql://ecotone:secret@127.0.0.1:3306/ecotone vendor/bin/phpunit",
    "tests:phpunit": ["@tests:phpunit-postgres","@tests:phpunit-mysql"],
    "tests:behat-postgres": "DATABASE_DSN=pgsql://ecotone:secret@localhost:5432/ecotone vendor/bin/behat -vvv",
    "tests:behat-mysql": "DATABASE_DSN=mysql://ecotone:secret@127.0.0.1:3306/ecotone vendor/bin/behat -vvv",
    "tests:behat": ["@tests:behat-postgres","@tests:behat-mysql"],
    "tests:ci": [
      "@tests:phpstan",
      "@tests:phpunit",
      "@tests:behat"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "2.0.0.x-dev"
    },
    "ecotone": {
      "repository": "pdo-event-sourcing"
    },
    "merge-plugin": {
      "include": [
        "../config.json"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "wikimedia/composer-merge-plugin": true
    }
  }
}
